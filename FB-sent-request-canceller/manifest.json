{
  "manifest_version": 3,
  "name": "Facebook Sent Requests Canceller",
  "version": "1.0",
  "description": "Automatically cancel all your sent friend requests on Facebook.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cancel Facebook Requests"
  },
  "background": {
    "service_worker": "popup.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["content.js"]
    }
  ]
}